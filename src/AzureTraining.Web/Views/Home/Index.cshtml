@using AzureTraining.Web.Helpers
@model AzureTraining.Web.Models.DocumentsListViewModel

<ul class="thumbnails">
@foreach (var doc in Model.Documents)
{
    <li class="span4">
        <div class="thumbnail">
            <div class="hero-unit">
                <h1>@doc.Name</h1>
                <p>@doc.Preview</p>
                <p>
                    <a class="btn btn-primary btn-large">Download</a>
                    <a class="btn btn-primary btn-large">Edit</a>
                    @if (DocRolesHelper.IsCurrentUserOwnerOfDocument(doc))
                    {
                        <a class="btn btn-primary btn-large">Manage</a> 
                    }    
                </p>
            </div>
        </div>
    </li>
}
</ul>
