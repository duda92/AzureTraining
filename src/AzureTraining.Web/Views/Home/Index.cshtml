@using AzureTraining.Web.Helpers
@model AzureTraining.Web.Models.DocumentsListViewModel


<ul class="thumbnails">
@foreach (var doc in Model.Documents)
{
    <li class="span4">
        <div class="thumbnail">
            <div class="hero-unit">
                <h1>@doc.Name</h1>
                <p>@doc.Preview</p>
                <p>
                    <a class="btn btn-primary btn-large" href="@doc.Url">Download</a>
                    <a class="btn btn-primary btn-large">View</a>
                    @if (DocRolesHelper.IsCurrentUserOwnerOfDocument(doc))
                    {
                        if (doc.IsShared)
                        {
                            <a class="btn btn-primary btn-large">Privatize</a> 
                        }
                        else
                        {
                            <a class="btn btn-primary btn-large">Share</a> 
                        }
                    }
                </p>
            </div>
        </div>
    </li>
}
</ul>
